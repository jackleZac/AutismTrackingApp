<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/dietary_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dietary Entries"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="50dp"/>

    <EditText
        android:id="@+id/meal_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Meal"
        android:inputType="text"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/dietary_title" />

    <EditText
        android:id="@+id/preference_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Preference (e.g., Liked)"
        android:inputType="text"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/meal_input" />

    <EditText
        android:id="@+id/notes_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Notes (e.g., Healthy)"
        android:inputType="text"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/preference_input" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Entry"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/notes_input"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/save_button"
        app:layout_constraintBottom_toTopOf="@id/button_to_medications" />

    <Button
        android:id="@+id/button_to_medications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Medication"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/button_to_profile"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button_to_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/button_to_summary"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button_to_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Summary"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>